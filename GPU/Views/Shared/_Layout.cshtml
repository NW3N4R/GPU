<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/DetailsCss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NavCss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StudentInsertStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CerStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StudentTableStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/InvoicesStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomeStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StaticalSearchBar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StaticalTableSpecialStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NewInvoiceStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Gallery.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/infoStyle.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="~/logo.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/logo.png">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.min.css">
    <script src="https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.min.js"></script>
</head>
<body>
    <header>
        <nav class="WideNav">
            <a class="LogoSide " asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/logo.png" class="NavLogo" />
                <div>
                    <p>پەیمانگای تەکنیکی کەلار</p>
                    <p style="font-size:0.8rem;">هۆبـەی تـۆمـارگـا</p>
                </div>
            </a>

            <ul class="centerSide ">
                <li class="nav-li ">
                    <a class="nav-link "
                       asp-area=""
                       asp-controller="Home"
                       asp-action="Index">سەرەتا</a>
                </li>

                <li class="nav-li ">
                    <a class="nav-link "
                       asp-area=""
                       asp-controller="Students"
                       asp-action="Create">تۆمارکردن</a>
                </li>

                <li class="nav-li ">
                    <a class="nav-link  "
                       asp-area=""
                       asp-controller="Students"
                       asp-action="Index">خوێندکاران</a>
                </li>
                <li class="nav-li ">
                    <a class="nav-link "
                       asp-area=""
                       asp-controller="Certificates"
                       asp-action="Index">بڕوانامەکان</a>
                </li>
                <li class="nav-li ">
                    <a class="nav-link "
                       asp-area=""
                       asp-controller="Archive"
                       asp-action="Index">ئەرشیف</a>
                </li>

                <li class="nav-li ">
                    <a class="nav-link "
                       asp-area=""
                       asp-controller="StaticalView"
                       asp-action="Index">ئامار</a>
                </li>

            </ul>


            <div class="logOutSide ">
                <a class="nav-link  "
                   asp-area=""
                   asp-controller="Account"
                   asp-action="Logout"> @User.Identity.Name</a>
            </div>

        </nav>
        <nav class="topnav">
            <div class="active">
                <button class="burger" onclick="toggleMenu()">&#9776;</button>
                <a class="LogoSide " asp-area="" asp-controller="Home" asp-action="Index">
                    <p>پەیمانگای تەکنیکی کەلار</p>
                </a>
                <a class="mobUser"
                   asp-area=""
                   asp-controller="Account"
                   asp-action="Logout"> @User.Identity.Name</a>
            </div>

            <div class="nav-items" id="myTopnav">
                <a asp-area=""
                   asp-controller="Students"
                   asp-action="Create">تۆمارکردن</a>
                <a asp-area=""
                   asp-controller="Students"
                   asp-action="Index">خوێندکاران</a>

                <a asp-area=""
                   asp-controller="Certificates"
                   asp-action="Index">بڕوانامەکان</a>

                <a asp-area=""
                   asp-controller="Archive"
                   asp-action="Index">ئەرشیف</a>

                <a asp-area=""
                   asp-controller="StaticalView"
                   asp-action="Index">ئامار</a>

                <a class="mobUser2"
                   asp-area=""
                   asp-controller="Account"
                   asp-action="Logout"> @User.Identity.Name</a>
            </div>
        </nav>

        <script>


       


            function toggleMenu() {
                var menu = document.getElementById('myTopnav');
                if (menu.className === "nav-items") {
                    menu.classList.add("responsive");
                    menu.style.maxHeight = menu.scrollHeight + "vh";
                }
                else {
                    menu.style.maxHeight = "0px";
                    menu.classList.remove("responsive")
                }
            }

        </script>
    </header>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <partial id="status-info" class="infobar-container">
            @{
                Html.RenderPartial("~/Views/Info/Info.cshtml");
            }
        </partial>

    </div>

    <footer>
        <div class="finner">
            <p class="pfirst">
                پەیمانگای تەکنیکی کەلار &ndash; هۆبەی تۆمارگە &copy;  @DateTime.Now.Year
            </p>
            <p class="midP">
                @if (GPU.Helpers.WeatherCall._weather.Any())
                {
                    <span>

                        @GPU.Helpers.WeatherCall._weather.FirstOrDefault().Current.Temp_C&deg;

                        پلەی گەرمی کەلار
                    </span>
                }
                else
                {
                    <span>
                        @DateTime.Now.Year &dash; @DateTime.Now.AddYears(1).Year
                    </span>
                }
            </p>
            <p class="plast">
                گەشەپیدراوە لەلایەن (هیوا عزیز عباس) ەوە
            </p>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="~/js/StudentInsertJS.js" asp-append-version="true"> </script> *@
    <script src="~/js/HomeJS.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



